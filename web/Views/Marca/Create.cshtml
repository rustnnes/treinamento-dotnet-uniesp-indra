@model Backend.Marca

@{
  var paises = new Backend.PaisRepositorio().listarTodos().OrderBy(x => x.nome);
  //var paisesSelect = new SelectList(paises, "Id", "Nome");
}

<h1>Cadastro de marcas</h1>

@using (Html.BeginForm("Create", "Marca", FormMethod.Post))

{

<div class="col-md-3">
  <div class="form-group">
    @Html.HiddenFor(x => x.id)
    @Html.Label("Nome")
    @Html.TextBoxFor(x => x.nome, new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.Label("Origem")
    @Html.DropDownList("idPais", ViewBag.selectPaises , "selecione", new { @class = "form-control" })
  </div>

  <input type="submit" value="Salvar" class="btn btn-primary" />
</div>

}
